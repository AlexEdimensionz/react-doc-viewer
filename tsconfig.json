{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "target": "ES6",
    "module": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "skipLibCheck": false,
    "types": ["vitest/globals"]
  }
}
